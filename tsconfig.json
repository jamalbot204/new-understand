{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "components", "contexts", "hooks", "services", "App.tsx", "index.tsx", "constants.ts", "types.ts", "types", "declarations.d.ts"],
  "exclude": ["node_modules", "dist", "vite.config.ts", "postcss.config.js", "tailwind.config.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
